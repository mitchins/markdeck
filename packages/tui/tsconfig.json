{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node"],
    "paths": {
      "@markdeck/core/*": ["../../src/core/*"]
    },
    "baseUrl": "."
  },
  "include": ["src/**/*", "../../src/core/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
