{
    "name": "markdeck",
    "private": true,
    "version": "0.2.0",
    "type": "module",
    "description": "Visual Kanban board for STATUS.md files with GitHub sync",
    "scripts": {
        "dev": "vite",
        "kill": "fuser -k 5000/tcp",
        "build": "npm run build:tui && tsc -b --noCheck && vite build",
        "build:tui": "cd packages/tui && npm run build",
        "build:tui:bin": "cd packages/tui && npm run build:bin",
        "build:tui:all": "npm run build:tui && npm run build:tui:bin",
        "build:mcp": "cd mcp && npm run build",
        "lint": "eslint . && cd packages/tui && npm run lint",
        "markdeck-tui": "node packages/tui/dist/cli.js",
        "markdeck-mcp": "cd mcp && npm run build && node dist/mcp/src/index.js",
        "optimize": "vite optimize",
        "preview": "vite preview",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:run": "vitest run",
        "test:coverage": "mkdir -p test-results && vitest run --coverage --reporter=junit --outputFile=test-results/junit.xml",
        "test:unit": "vitest run tests/unit",
        "test:integration": "vitest run tests/integration",
        "test:e2e": "vitest run tests/e2e",
        "test:e2e:playwright": "playwright test",
        "test:e2e:playwright:ui": "playwright test --ui",
        "gen:screenshots": "playwright test tests/e2e/screenshots.spec.ts",
        "test:tui": "cd packages/tui && npm run test",
        "test:mcp": "cd mcp && npm test",
        "test:watch": "vitest watch"
    },
    "dependencies": {
        "@heroicons/react": "^2.2.0",
        "@hookform/resolvers": "^4.1.3",
        "@octokit/core": "^6.1.6",
        "@phosphor-icons/react": "^2.1.10",
